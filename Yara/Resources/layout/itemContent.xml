<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewContentActive"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#0d0d0d"
            android:layout_height="match_parent">


            <Button
                android:layout_below="@+id/tvDesContent"
                android:text="فایل پیوستی"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textColor="#ffcc00"  
                android:background="#1a1a1a"
                android:layout_height="wrap_content"
                android:id="@+id/btnFileContent" />

             <androidx.appcompat.widget.AppCompatImageView
                android:layout_below="@+id/ivImageContent"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share"
                android:id="@+id/ivImageShareContent"
                android:layout_marginRight="9.5dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImageContent"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_notif"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tvTitleContent"
                android:layout_below="@+id/tvdefinerContentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نمونه یک عنوان"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffd6cc"
                android:layout_toLeftOf="@+id/ivImageContent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0.4dp" />

            <TextView
                android:id="@+id/tvDesContent"
                android:layout_below="@+id/tvTitleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="این یک توضیح بلند است و نشان دهنده یک توضیح برای عنوان است"
                android:textSize="16sp"
                android:textColor="@android:color/white" 
                android:layout_toLeftOf="@+id/ivImageContent"
                android:layout_marginRight="5.6dp"
                android:layout_marginTop="1.5dp"
                android:paddingBottom="10dp"/>
 
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text=" Reg:1399/05/08 , 18:45"
                android:textColor="#4da6ff"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_below="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="نمره 2 از 4"
                android:textColor="#ff5c33"
                android:textSize="15sp"
                android:id="@+id/tvdefinerContentItem"
                android:accessibilityHeading="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNote1"
                android:layout_below="@+id/tvDesContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="1399/05/08 , 18:45"
                android:textColor="#ccffdd"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNote2"
                android:layout_below="@+id/tvNote1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="1399/05/08 , 18:45"
                android:textColor="#ff8080"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
