<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Practicescontainer">

    <android.support.v7.widget.RecyclerView
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:layout_above="@+id/PracticesnavigationBar"
        android:id="@+id/PracticesrecyclerView" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemIconTint="#ffcce0"
        app:itemTextColor="@android:color/white"
        android:background="#0d001a"
        android:layout_alignParentBottom="true"
        app:menu="@menu/practicesnav"
        android:id="@+id/PracticesnavigationBar" />

</RelativeLayout>